{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.+\\.(?!php)[^/]+)$", "dest": "/api/$1" }, 
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "version": 2,
  "builds": [
    {
      "src": "api/public/**/*", 
      "use": "@vercel/static"
    }
  ]
}


