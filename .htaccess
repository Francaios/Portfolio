<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^api/(.*)$ api/index.php [L,QSA]
    RewriteRule ^index\.php$ /api/index.php [R=301,L]
</IfModule>
<FilesMatch "\.css$">
    Header set Content-Type text/css
</FilesMatch>